<aura:component
  implements="forceCommunity:themeLayout"
  access="global"
  description="TailwindCSS Default Theme Layout"
>
  <aura:attribute name="search" type="Aura.Component[]" required="false" />
  <aura:attribute name="profileMenu" type="Aura.Component[]" required="false" />
  <aura:attribute name="navBar" type="Aura.Component[]" required="false" />
  <aura:attribute name="title" type="String" required="false" />

  <ltng:require
    styles="{!$Resource.sctw_GlobalCommunityStyles + '/bin/global.css'}"
  />

  <div class="container mx-auto md:my-4">
    <header class="flex px-4">
      <div
        class="flex-shrink-0 font-sans font-bold text-2xl text-blue-800 mr-4"
      >
        {!v.title}
      </div>
      <div class="flex-grow mr-4">{!v.navBar}</div>
      <div class="w-1/5">{!v.search}</div>
      <div class="flex flex-col justify-center w-1/5">{!v.profileMenu}</div>
    </header>
    <div>{!v.body}</div>
  </div>
</aura:component>
