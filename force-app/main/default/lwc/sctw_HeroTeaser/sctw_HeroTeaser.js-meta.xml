<?xml version="1.0" encoding="UTF-8" ?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>50.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>TailwindCSS Hero Teaser</masterLabel>
    <description>Hero teaser for the TailwindCSS example</description>
    <targets>
        <target>lightningCommunity__Page</target>
        <target>lightningCommunity__Default</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightningCommunity__Default">
            <property
        name="title"
        type="String"
        default="Example Title"
        label="Title"
        description="Title of the teaser"
      />
            <property
        name="text"
        type="String"
        default="Example teaser text"
        label="Text"
        description="Text of the teaser"
      />
            <property
        name="primaryButtonLabel"
        type="String"
        default="Primary Label"
        label="Primary Button Label"
        description="Label of the primary button"
      />
            <property
        name="primaryButtonTarget"
        type="String"
        default="Home"
        label="Primary Button Target"
        description="Page API name linked by the primary button"
      />
            <property
        name="secondaryButtonLabel"
        type="String"
        default="Secondary Label"
        label="Secondary Button Label"
        description="Label of the secondary button"
      />
            <property
        name="secondaryButtonTarget"
        type="String"
        default="Home"
        label="Secondary Button Target"
        description="Page API name linked by the secondary button"
      />
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
